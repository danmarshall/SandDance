{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 300,
  "height": 600,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "../../../docs/sample-data/titanicmaster.tsv",
      "format": {
        "type": "tsv"
      },
      "transform": [
        {
          "type": "identifier",
          "as": "id"
        },
        {
          "type": "extent",
          "field": "Age",
          "signal": "bin_maxbins_20_Age_extent"
        },
        {
          "type": "bin",
          "field": "Age",
          "as": [
            "bin_maxbins_20_Age",
            "bin_maxbins_20_Age_end"
          ],
          "signal": "bin_maxbins_20_Age_bins",
          "extent": {
            "signal": "bin_maxbins_20_Age_extent"
          },
          "maxbins": 20
        },
        {
          "type": "window",
          "groupby": [
            "bin_maxbins_20_Age"
          ],
          "ops": [
            "count"
          ],
          "fields": [
            "id"
          ],
          "as": [
            "__count"
          ]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"bin_maxbins_20_Age\"]) && isFinite(+datum[\"bin_maxbins_20_Age\"])"
        },
        {
          "type": "extent",
          "field": "__count",
          "signal": "maxcount"
        }
      ]
    },
    {
      "name": "seq",
      "transform": [
        {
          "type": "sequence",
          "start": {
            "signal": "bin_maxbins_20_Age_bins.start"
          },
          "stop": {
            "signal": "bin_maxbins_20_Age_bins.stop"
          },
          "step": {
            "signal": "bin_maxbins_20_Age_bins.step"
          }
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": [
        "bar"
      ],
      "from": {
        "data": "source_0"
      },
      "encode": {
        "update": {
          "fill": {
            "scale": "color",
            "field": "Class"
          },
          "x": {
            "signal": "scale('x', floor((datum.__count-1)/cellcount) * cellcount)"
          },
          "y": {
            "scale": "y",
            "field": "bin_maxbins_20_Age",
            "offset": {
              "signal": "bandWidth /cellcount * ( (datum.__count-1) %cellcount) + (-bandWidth - 0.5*bandWidth * bandPadding)"
            }
          },
          "height": {
            "signal": "marksize"
          },
          "width": {
            "signal": "marksize"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "field": "__count"
      },
      "range": [
        0,
        {
          "signal": "width"
        }
      ],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "signal": "[bin_maxbins_20_Age_bins.start, bin_maxbins_20_Age_bins.stop]"
      },
      "range": [
        {
          "signal": "height"
        },
        0
      ],
      "bins": {
        "signal": "bin_maxbins_20_Age_bins"
      },
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source_0",
        "field": "Class",
        "sort": true
      },
      "range": "category"
    },
    {
      "name": "quantBand",
      "type": "band",
      "domain": {
        "data": "seq",
        "field": "data",
        "sort": true
      },
      "range": [
        {
          "signal": "height"
        },
        0
      ],
      "padding": {
        "signal": "bandPadding"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {
        "signal": "ceil(width/40)"
      },
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Count of Records",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {
        "signal": "ceil(width/40)"
      },
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Age (binned)",
      "labelOverlap": true,
      "tickCount": {
        "signal": "ceil(height/10)"
      },
      "zindex": 0
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {
        "signal": "clamp(height, 64, 200)"
      },
      "symbolType": "square",
      "title": "Class"
    }
  ],
  "signals": [
    {
      "name": "child_width",
      "update": "width"
    },
    {
      "name": "child_height",
      "update": "height"
    },
    {
      "name": "bandWidth",
      "update": "bandwidth('quantBand')"
    },
    {
      "name": "bandPadding",
      "value": 0.1
    },
    {
      "name": "cellcount",
      "update": "ceil(sqrt(maxcount[1]*(bandWidth/child_width)))"
    },
    {
      "name": "gap",
      "update": "min(0.1*(bandWidth/(cellcount-1)),1)"
    },
    {
      "name": "marksize",
      "update": "bandWidth/cellcount-gap"
    }
  ]
}