{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "data": [
    {
      "name": "source_0",
      "url": "../../../sample-data/titanicmaster.tsv",
      "format": {
        "type": "tsv"
      },
      "transform": [
        {
          "type": "identifier",
          "as": "id"
        },
        {
          "type": "window",
          "groupby": [
            "Gender",
            "Class"
          ],
          "ops": [
            "count"
          ],
          "fields": [
            "id"
          ],
          "as": [
            "__count"
          ]
        },
        {
          "type": "extent",
          "field": "__count",
          "signal": "maxcount"
        }
      ]
    },
    {
      "name": "facet_domain",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Gender"
          ]
        }
      ]
    },
    {
      "name": "facet_domain_row",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": 1
        }
      ]
    },
    {
      "name": "facet_domain_column",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": {
            "signal": "length(data(\"facet_domain\"))"
          }
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "child_width",
      "value": 300
    },
    {
      "name": "child_height",
      "value": 300
    },
    {
      "name": "bandWidth",
      "update": "bandwidth('x')"
    },
    {
      "name": "bandPadding",
      "value": 0.1
    },
    {
      "name": "cellcount",
      "update": "ceil(sqrt(maxcount[1]*(bandWidth/child_height)))"
    },
    {
      "name": "gap",
      "update": "min(0.1*(bandWidth/(cellcount-1)),1)"
    },
    {
      "name": "marksize",
      "update": "bandWidth/cellcount-gap"
    }
  ],
  "layout": {
    "padding": 20,
    "bounds": "full",
    "align": "all"
  },
  "marks": [
    {
      "name": "facet-title",
      "type": "group",
      "role": "column-title",
      "title": {
        "text": "Gender",
        "style": "guide-title",
        "offset": 10
      }
    },
    {
      "name": "row_header",
      "type": "group",
      "role": "row-header",
      "from": {
        "data": "facet_domain_row"
      },
      "encode": {
        "update": {
          "height": {
            "signal": "child_height"
          }
        }
      },
      "axes": [
        {
          "scale": "y",
          "orient": "left",
          "grid": false,
          "title": "Count of Records",
          "labelOverlap": true,
          "tickCount": {
            "signal": "ceil(child_height/40)"
          },
          "zindex": 0
        }
      ]
    },
    {
      "name": "column_footer",
      "type": "group",
      "role": "column-footer",
      "from": {
        "data": "facet_domain_column"
      },
      "encode": {
        "update": {
          "width": {
            "signal": "child_width"
          }
        }
      },
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "grid": false,
          "title": "Class",
          "labelAlign": "right",
          "labelAngle": 270,
          "labelBaseline": "middle",
          "zindex": 0
        }
      ]
    },
    {
      "name": "cell",
      "type": "group",
      "title": {
        "text": {
          "signal": "''+parent[\"Gender\"]"
        },
        "style": "guide-label",
        "frame": "group",
        "offset": 10
      },
      "style": "cell",
      "from": {
        "facet": {
          "name": "facet",
          "data": "source_0",
          "groupby": [
            "Gender"
          ]
        }
      },
      "sort": {
        "field": [
          "datum[\"Gender\"]"
        ],
        "order": [
          "ascending"
        ]
      },
      "encode": {
        "update": {
          "width": {
            "signal": "child_width"
          },
          "height": {
            "signal": "child_height"
          }
        }
      },
      "marks": [
        {
          "name": "child_marks",
          "type": "rect",
          "style": [
            "bar"
          ],
          "from": {
            "data": "facet"
          },
          "encode": {
            "update": {
              "fill": {
                "scale": "color",
                "field": "Class"
              },
              "x": {
                "scale": "x",
                "field": "Class",
                "offset": {
                  "signal": "bandWidth /cellcount * ( (datum.__count-1) %cellcount)"
                }
              },
              "width": {
                "signal": "marksize"
              },
              "y": {
                "signal": "scale('y', floor((datum.__count-1)/cellcount) * cellcount)-marksize"
              },
              "height": {
                "signal": "marksize"
              }
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "y",
          "orient": "left",
          "gridScale": "x",
          "grid": true,
          "tickCount": {
            "signal": "ceil(child_height/40)"
          },
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "Class",
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "child_width"
        }
      ],
      "padding": {
        "signal": "bandPadding"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "field": "__count"
      },
      "range": [
        {
          "signal": "child_height"
        },
        0
      ],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source_0",
        "field": "Class",
        "sort": true
      },
      "range": "category"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {
        "signal": "clamp(child_height, 64, 200)"
      },
      "symbolType": "square",
      "title": "Class"
    }
  ]
}