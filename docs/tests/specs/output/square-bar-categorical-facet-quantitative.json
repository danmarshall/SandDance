{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "data": [
    {
      "name": "source_00",
      "url": "../../../sample-data/titanicmaster.tsv",
      "format": {
        "type": "tsv"
      },
      "transform": [
        {
          "type": "extent",
          "field": "TicketCost",
          "signal": "bin_maxbins_30_TicketCost_extent"
        },
        {
          "type": "bin",
          "field": "TicketCost",
          "as": [
            "bin_maxbins_30_TicketCost",
            "bin_maxbins_30_TicketCost_end"
          ],
          "signal": "bin_maxbins_30_TicketCost_bins",
          "extent": {
            "signal": "bin_maxbins_30_TicketCost_extent"
          },
          "maxbins": 30
        }
      ]
    },
    {
      "name": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Class",
            "bin_maxbins_30_TicketCost",
            "bin_maxbins_30_TicketCost_end"
          ],
          "ops": [
            "count"
          ],
          "fields": [
            null
          ],
          "as": [
            "__count"
          ]
        },
        {
          "type": "extent",
          "field": "__count",
          "signal": "maxcount"
        }
      ],
      "source": "source_00"
    },
    {
      "name": "facet_domain",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "bin_maxbins_30_TicketCost",
            "bin_maxbins_30_TicketCost_end"
          ]
        }
      ]
    },
    {
      "name": "facet_domain_row",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": {
            "signal": "ceil(length(data(\"facet_domain\")) / 10)"
          }
        }
      ]
    },
    {
      "name": "facet_domain_column",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": {
            "signal": "min(length(data(\"facet_domain\")), 10)"
          }
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "child_width",
      "value": 300
    },
    {
      "name": "child_height",
      "value": 300
    },
    {
      "name": "bandWidth",
      "update": "bandwidth('y')"
    },
    {
      "name": "bandPadding",
      "value": 0.1
    },
    {
      "name": "cellcount",
      "update": "ceil(sqrt(maxcount[1]*(bandWidth/child_width)))"
    },
    {
      "name": "gap",
      "update": "min(0.1*(bandWidth/(cellcount-1)),1)"
    },
    {
      "name": "marksize",
      "update": "bandWidth/cellcount-gap"
    }
  ],
  "layout": {
    "padding": 20,
    "bounds": "full",
    "align": "all",
    "columns": 10
  },
  "marks": [
    {
      "name": "facet-title",
      "type": "group",
      "role": "column-title",
      "title": {
        "text": "TicketCost (binned)",
        "style": "guide-title",
        "offset": 10
      }
    },
    {
      "name": "row_header",
      "type": "group",
      "role": "row-header",
      "from": {
        "data": "facet_domain_row"
      },
      "encode": {
        "update": {
          "height": {
            "signal": "child_height"
          }
        }
      },
      "axes": [
        {
          "scale": "y",
          "orient": "left",
          "grid": false,
          "title": "Class",
          "zindex": 0
        }
      ]
    },
    {
      "name": "column_footer",
      "type": "group",
      "role": "column-footer",
      "from": {
        "data": "facet_domain_column"
      },
      "encode": {
        "update": {
          "width": {
            "signal": "child_width"
          }
        }
      },
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "grid": false,
          "title": "Count of Records",
          "labelFlush": true,
          "labelOverlap": true,
          "tickCount": {
            "signal": "ceil(child_width/40)"
          },
          "zindex": 0
        }
      ]
    },
    {
      "name": "cell",
      "type": "group",
      "title": {
        "text": {
          "signal": "!isValid(parent[\"bin_maxbins_30_TicketCost\"]) || !isFinite(+parent[\"bin_maxbins_30_TicketCost\"]) ? \"null\" : format(parent[\"bin_maxbins_30_TicketCost\"], \"\") + \" - \" + format(parent[\"bin_maxbins_30_TicketCost_end\"], \"\")"
        },
        "style": "guide-label",
        "frame": "group",
        "offset": 10
      },
      "style": "cell",
      "from": {
        "facet": {
          "name": "facet",
          "data": "source_00",
          "groupby": [
            "bin_maxbins_30_TicketCost",
            "bin_maxbins_30_TicketCost_end"
          ]
        }
      },
      "sort": {
        "field": [
          "datum[\"bin_maxbins_30_TicketCost\"]"
        ],
        "order": [
          "ascending"
        ]
      },
      "encode": {
        "update": {
          "width": {
            "signal": "child_width"
          },
          "height": {
            "signal": "child_height"
          }
        }
      },
      "marks": [
        {
          "name": "child_marks",
          "type": "rect",
          "style": [
            "bar"
          ],
          "from": {
            "data": "s2"
          },
          "encode": {
            "update": {
              "fill": {
                "value": "#4c78a8"
              },
              "x": {
                "scale": "x",
                "field": "__count"
              },
              "x2": {
                "scale": "x",
                "value": 0
              },
              "y": {
                "scale": "y",
                "field": "Class"
              },
              "height": {
                "scale": "y",
                "band": true
              },
              "opacity": {
                "value": 0.2
              }
            }
          }
        },
        {
          "name": "bandfacet",
          "type": "group",
          "from": {
            "facet": {
              "name": "bandfacet_0",
              "data": "facet",
              "groupby": [
                "bin_maxbins_30_TicketCost",
                "Class"
              ]
            }
          },
          "encode": {
            "update": {
              "y": {
                "signal": "scale('y', datum['Class'])"
              },
              "height": {
                "signal": "bandwidth('y')"
              },
              "x": {
                "signal": "scale('x', 0)"
              },
              "width": {
                "signal": "scale('x', datum['count'])"
              },
              "fill": {
                "signal": "\"pink\""
              },
              "opacity": {
                "value": 0.4
              }
            }
          },
          "data": [
            {
              "name": "bandfacet_1",
              "source": "source_00",
              "transform": [
                {
                  "type": "filter",
                  "expr": "datum['bin_maxbins_30_TicketCost'] == parent['bin_maxbins_30_TicketCost'] && datum['Class'] == parent['Class']"
                },
                {
                  "type": "window",
                  "ops": [
                    "count"
                  ],
                  "as": [
                    "bandfacet_id"
                  ]
                },
                {
                  "type": "extent",
                  "field": "bandfacet_id",
                  "signal": "bandfacet_id_extent"
                },
                {
                  "type": "filter",
                  "expr": "datum.bandfacet_id == bandfacet_id_extent[1]"
                }
              ]
            }
          ],
          "marks": [
            {
              "type": "text",
              "from": {
                "data": "bandfacet_1"
              },
              "encode": {
                "update": {
                  "text": {
                    "field": "bandfacet_id"
                  }
                }
              }
            }
          ]
        }
      ],
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "gridScale": "y",
          "grid": true,
          "tickCount": {
            "signal": "ceil(child_width/40)"
          },
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        }
      ],
      "data": [
        {
          "name": "s2",
          "source": "facet",
          "transform": [
            {
              "type": "aggregate",
              "groupby": [
                "Class",
                "bin_maxbins_30_TicketCost",
                "bin_maxbins_30_TicketCost_end"
              ],
              "ops": [
                "count"
              ],
              "fields": [
                null
              ],
              "as": [
                "__count"
              ]
            },
            {
              "type": "extent",
              "field": "__count",
              "signal": "maxcount"
            }
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "field": "__count"
      },
      "range": [
        0,
        {
          "signal": "child_width"
        }
      ],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "Class",
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "child_height"
        }
      ],
      "padding": {
        "signal": "bandPadding"
      }
    }
  ]
}