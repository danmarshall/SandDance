{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 300,
  "height": 600,
  "style": "cell",
  "data": [
    {
      "name": "source_00",
      "url": "../../../sample-data/titanicmaster.tsv",
      "format": {
        "type": "tsv"
      },
      "transform": [
        {
          "type": "extent",
          "field": "Age",
          "signal": "bin_maxbins_20_Age_extent"
        },
        {
          "type": "bin",
          "field": "Age",
          "as": [
            "bin_maxbins_20_Age",
            "bin_maxbins_20_Age_end"
          ],
          "signal": "bin_maxbins_20_Age_bins",
          "extent": {
            "signal": "bin_maxbins_20_Age_extent"
          },
          "maxbins": 20
        }
      ]
    },
    {
      "name": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "bin_maxbins_20_Age",
            "bin_maxbins_20_Age_end"
          ],
          "ops": [
            "sum"
          ],
          "fields": [
            "TicketCost"
          ],
          "as": [
            "sum_TicketCost"
          ]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"bin_maxbins_20_Age\"]) && isFinite(+datum[\"bin_maxbins_20_Age\"])"
        },
        {
          "type": "extent",
          "field": "__count",
          "signal": "maxcount"
        }
      ],
      "source": "source_00"
    },
    {
      "name": "seq",
      "transform": [
        {
          "type": "sequence",
          "start": {
            "signal": "bin_maxbins_20_Age_bins.start"
          },
          "stop": {
            "signal": "bin_maxbins_20_Age_bins.stop"
          },
          "step": {
            "signal": "bin_maxbins_20_Age_bins.step"
          }
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": [
        "bar"
      ],
      "from": {
        "data": "source_0"
      },
      "encode": {
        "update": {
          "fill": {
            "value": "#4c78a8"
          },
          "x": {
            "scale": "x",
            "field": "sum_TicketCost"
          },
          "x2": {
            "scale": "x",
            "value": 0
          },
          "y2": [
            {
              "test": "!isValid(datum[\"bin_maxbins_20_Age\"]) || !isFinite(+datum[\"bin_maxbins_20_Age\"])",
              "field": {
                "group": "height"
              }
            },
            {
              "scale": "y",
              "field": "bin_maxbins_20_Age"
            }
          ],
          "y": [
            {
              "test": "!isValid(datum[\"bin_maxbins_20_Age\"]) || !isFinite(+datum[\"bin_maxbins_20_Age\"])",
              "field": {
                "group": "height"
              }
            },
            {
              "scale": "y",
              "field": "bin_maxbins_20_Age_end",
              "offset": 1
            }
          ],
          "opacity": {
            "value": 0.2
          }
        }
      }
    },
    {
      "name": "bandfacet",
      "type": "group",
      "from": {
        "facet": {
          "name": "bandfacet_0",
          "data": "source_00",
          "groupby": [
            "bin_maxbins_20_Age"
          ],
          "aggregate": {
            "as": [
              "sum_TicketCost"
            ],
            "fields": [
              "TicketCost"
            ],
            "ops": [
              "sum"
            ]
          }
        }
      },
      "signals": [
        {
          "name": "barWidth",
          "update": "scale('x', parent['sum_TicketCost'])"
        },
        {
          "name": "barHeight",
          "update": "bandWidth"
        }
      ],
      "encode": {
        "update": {
          "y": {
            "signal": "scale('y', datum['bin_maxbins_20_Age'])-bandWidth"
          },
          "height": {
            "signal": "bandWidth"
          },
          "x": {
            "signal": "scale('x', 0)"
          },
          "width": {
            "signal": "scale('x', datum['sum_TicketCost'])"
          },
          "fill": {
            "signal": "\"pink\""
          },
          "opacity": {
            "value": 0.4
          }
        }
      },
      "marks": [
        {
          "name": "treemapMarks",
          "type": "rect",
          "from": {
            "data": "treemapData"
          },
          "encode": {
            "update": {
              "x": {
                "field": "x0"
              },
              "x2": {
                "field": "x1"
              },
              "y": {
                "field": "y0"
              },
              "y2": {
                "field": "y1"
              }
            }
          }
        }
      ],
      "data": [
        {
          "name": "treemapData",
          "source": "bandfacet_0",
          "transform": [
            {
              "type": "nest"
            },
            {
              "type": "treemap",
              "field": "TicketCost",
              "sort": {
                "field": "value",
                "order": "descending"
              },
              "round": true,
              "method": "squarify",
              "padding": 1,
              "size": [
                {
                  "signal": "barWidth"
                },
                {
                  "signal": "barHeight"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "field": "sum_TicketCost"
      },
      "range": [
        0,
        {
          "signal": "width"
        }
      ],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "signal": "[bin_maxbins_20_Age_bins.start, bin_maxbins_20_Age_bins.stop]"
      },
      "range": [
        {
          "signal": "height"
        },
        0
      ],
      "bins": {
        "signal": "bin_maxbins_20_Age_bins"
      },
      "zero": false
    },
    {
      "name": "quantBand",
      "type": "band",
      "domain": {
        "data": "seq",
        "field": "data",
        "sort": true
      },
      "range": [
        {
          "signal": "height"
        },
        0
      ],
      "padding": {
        "signal": "bandPadding"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {
        "signal": "ceil(width/40)"
      },
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Sum of TicketCost",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {
        "signal": "ceil(width/40)"
      },
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Age (binned)",
      "labelOverlap": true,
      "tickCount": {
        "signal": "ceil(height/10)"
      },
      "zindex": 0
    }
  ],
  "signals": [
    {
      "name": "child_width",
      "update": "width"
    },
    {
      "name": "child_height",
      "update": "height"
    },
    {
      "name": "bandWidth",
      "update": "bandwidth('quantBand')"
    },
    {
      "name": "bandPadding",
      "value": 0.1
    }
  ]
}