{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 500,
  "height": 500,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://gist.githubusercontent.com/stevendrucker/148b70e89808fc13daed45c925f62b0e/raw/21b6e23161032aa0fff13e1f5fd57b841197a041/titanicmaster.txt",
      "format": {
        "type": "tsv"
      },
      "transform": [
        {
          "type": "identifier",
          "as": "id"
        },
        {
          "type": "window",
          "groupby": [
            "Gender"
          ],
          "ops": [
            "count"
          ],
          "fields": [
            "id"
          ],
          "as": [
            "__count"
          ]
        },
        {
          "type": "extent",
          "field": "__count",
          "signal": "maxcount"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": [
        "bar"
      ],
      "from": {
        "data": "source_0"
      },
      "encode": {
        "update": {
          "fill": {
            "scale": "color",
            "field": "Class"
          },
          "x": {
            "scale": "x",
            "field": "Gender",
            "offset": {
              "signal": "bx /cellcount * ( (datum.__count-1) %cellcount)"
            }
          },
          "width": {
            "signal": "marksize"
          },
          "y": {
            "signal": "scale('y', floor((datum.__count-1)/cellcount) * cellcount)-marksize"
          },
          "height": {
            "signal": "marksize"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "Gender",
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "width"
        }
      ],
      "padding": {
        "signal": "bandPadding"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "field": "__count"
      },
      "range": [
        {
          "signal": "height"
        },
        0
      ],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source_0",
        "field": "Class",
        "sort": true
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {
        "signal": "ceil(height/40)"
      },
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Gender",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Count of Records",
      "labelOverlap": true,
      "tickCount": {
        "signal": "ceil(height/40)"
      },
      "zindex": 0
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {
        "signal": "clamp(height, 64, 200)"
      },
      "symbolType": "square",
      "title": "Class"
    }
  ],
  "signals": [
    {
      "name": "child_width",
      "update": "width"
    },
    {
      "name": "child_height",
      "update": "height"
    },
    {
      "name": "bx",
      "update": "bandwidth('x')"
    },
    {
      "name": "bandPadding",
      "value": 0.1
    },
    {
      "name": "cellcount",
      "update": "ceil(sqrt(maxcount[1]*(bx/child_height)))"
    },
    {
      "name": "gap",
      "update": "min(0.1*(bx/(cellcount-1)),1)"
    },
    {
      "name": "marksize",
      "update": "bx/cellcount-gap"
    }
  ]
}